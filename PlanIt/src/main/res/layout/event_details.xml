<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/eventDetailsBar"
        android:layout_width="match_parent"
        android:layout_height="142px"
        android:gravity="center"
        android:background="@color/planit_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/screenTitle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="Event Details"
            android:textColor="#FFFFFF"
            android:textSize="15pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/details_eventName"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textColor="@color/planit_blue"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/details_eventLocation"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textColor="@color/planit_green"
            android:textSize="9pt" />
    </LinearLayout>

    <Button
        android:id="@+id/detail_priorityIndicator"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/priority_one_button"
        android:textColor="@color/white"
        android:textSize="25dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/details_eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:textColor="@color/planit_grey"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/details_eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:textColor="@color/planit_grey"
        android:textSize="7pt" />


    <TextView
        android:id="@+id/attendeesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textColor="@color/planit_blue"
        android:textSize="10pt" />

    <LinearLayout
        android:id="@+id/attendeesContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <it.sephiroth.android.library.widget.HListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/details_attendeesList"
            android:layout_width="355dp"
            android:layout_height="72dp"
            android:listSelector="@android:color/transparent" />

    </LinearLayout>

</LinearLayout>