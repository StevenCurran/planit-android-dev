<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/profileBar"
        android:layout_width="match_parent"
        android:layout_height="142px"
        android:background="@color/planit_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/screenTitle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            android:text="Link Account"
            android:textColor="#FFFFFF"
            android:textSize="15pt" />
    </LinearLayout>

    <TextView
        android:id="@+id/accountProviderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="Account Provider"
        android:textColor="@color/planit_blue"
        android:textSize="10pt" />

    <LinearLayout
        android:id="@+id/ProvidersContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40dp">

        <Button
            android:id="@+id/googleProviderIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@drawable/google_logo"
            android:onClick="setProvider" />

        <Button
            android:id="@+id/facebookProviderIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:alpha="0.5"
            android:background="@drawable/facebook_logo"
            android:onClick="setProvider" />

        <Button
            android:id="@+id/outlookProviderIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:alpha="0.5"
            android:background="@drawable/outlook_logo" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/planit_grey" />

    <Button
        android:id="@+id/accountLinkSignInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:textColor="#000000"
        android:textSize="9pt" />

    <LinearLayout
        android:id="@+id/tagsContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tagTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="Tags"
            android:textColor="@color/planit_blue"
            android:textSize="10pt" />

        <LinearLayout
            android:id="@+id/tagList"
            android:layout_width="fill_parent"
            android:layout_height="457px"
            android:background="@color/planit_grey"
            android:orientation="vertical">


        </LinearLayout>

        <Button
            android:id="@+id/linkButton"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_button"
            android:gravity="center_vertical"
            android:onClick="doLink"
            android:paddingBottom="10dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="10dp"
            android:text="Link"
            android:textColor="#FFFFFF"
            android:textSize="11pt" />

    </LinearLayout>

</LinearLayout>