<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/planit_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="590px"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/timeTitleBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/planit_blue"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/timePopupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:paddingTop="5dp"
                android:text="Time"
                android:textColor="@color/white"
                android:textSize="12pt" />

            <Button
                android:id="@+id/doneSelectTimeButton"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="70dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingTop="7dp"
                android:text="Done"
                android:textColor="#FFFFFF"
                android:textSize="8pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="490px"
            android:orientation="vertical">

            <LinearLayout android:id="@+id/firstTimeContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time1Header"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="Time "
                    android:textColor="@color/planit_green"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/time1Text"
                    android:layout_width="140dp"
                    android:paddingLeft="37dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/planit_grey"
                    android:layout_gravity="center"
                    android:textSize="9.5pt" />

                <Button
                    android:id="@+id/addTime1Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/time_button"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/secondTimeContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/time2Header"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="To "
                    android:textColor="@color/planit_green"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/time2Text"
                    android:layout_width="140dp"
                    android:paddingLeft="37dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/planit_grey"
                    android:textSize="9.5pt" />

                <Button
                    android:id="@+id/addTime2Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/time_button"/>
            </LinearLayout>

            <TextView
                android:id="@+id/dayHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="14dp"
                android:text="Day"
                android:textColor="@color/planit_green"
                android:textSize="7.5pt" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/monButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="MON"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/tueButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="TUE"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/wedButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="WED"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/thurButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="THUR"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:alpha="0.5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp">

                <Button
                    android:id="@+id/friButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="FRI"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/satButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="SAT"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/sunButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="SUN"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:alpha="0.5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>