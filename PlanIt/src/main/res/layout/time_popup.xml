<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/planit_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="440px"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/timeTitleBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/planit_blue"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/timePopupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:paddingTop="5dp"
                android:text="Time"
                android:textColor="@color/white"
                android:textSize="12pt" />

            <Button
                android:id="@+id/doneSelectTimeButton"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="60dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingTop="7dp"
                android:text="Done"
                android:textColor="#FFFFFF"
                android:textSize="8pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="340px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/preferredTimeHeader"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text="Time"
                        android:textColor="@color/planit_green"
                        android:textSize="7.5pt" />

                    <TextView
                        android:id="@+id/preferredTimeText"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:textColor="@color/black"
                        android:textSize="7pt" />

                </LinearLayout>

                <Button
                    android:id="@+id/addTimeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/time_button"
                    android:onClick="openTimePicker" />
            </LinearLayout>


            <TextView
                android:id="@+id/dayHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="16dp"
                android:text="Days"
                android:textColor="@color/planit_green"
                android:textSize="7.5pt" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/monButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="M"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/tueButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="T"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/wedButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="W"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/thurButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="M"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/friButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="F"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/satButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="S"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/sunButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_circle_button"
                    android:text="S"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:alpha="0.5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>